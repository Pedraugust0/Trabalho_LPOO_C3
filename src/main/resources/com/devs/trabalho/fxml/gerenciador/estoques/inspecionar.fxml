<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom right, #f5f5f5, #e0e0e0);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.devs.trabalho.controller.gerenciador.estoques.InspecionarEstoqueController">

    <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <children>
                <VBox>
                    <Label text="Gerenciar Produtos do Estoque:" textFill="#666">
                        <font><Font size="14.0" /></font>
                    </Label>
                    <Label fx:id="lblNomeEstoque" text="Nome do Estoque" textFill="#333">
                        <font><Font name="System Bold" size="24.0" /></font>
                    </Label>
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <Label fx:id="lblValorTotal" text="Valor Total: R$ 0,00" textFill="#2e7d32" style="-fx-background-color: #e8f5e9; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #2e7d32; -fx-border-radius: 5;">
                    <font><Font name="System Bold" size="16.0" /></font>
                </Label>
            </children>
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1);">
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
            </padding>
            <children>
                <Button mnemonicParsing="false" onAction="#adicionarProduto" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Adicionar Produto" />
                <Button mnemonicParsing="false" onAction="#editarProduto" style="-fx-background-color: white; -fx-text-fill: #333; -fx-border-color: #ddd; -fx-border-radius: 3; -fx-cursor: hand;" text="Editar" />
                <Button mnemonicParsing="false" onAction="#inspecionarProduto" style="-fx-background-color: white; -fx-text-fill: #333; -fx-border-color: #ddd; -fx-border-radius: 3; -fx-cursor: hand;" text="Detalhes" />
                <Button mnemonicParsing="false" onAction="#removerProduto" style="-fx-background-color: white; -fx-text-fill: #d32f2f; -fx-border-color: #ffcdd2; -fx-border-radius: 3; -fx-cursor: hand;" text="Remover" />

                <Region HBox.hgrow="ALWAYS" />

                <TextField fx:id="campoPesquisaProduto" onAction="#buscarProduto" promptText="Filtrar produto..." style="-fx-background-radius: 3; -fx-border-color: #ddd; -fx-border-radius: 3;" />
                <Button mnemonicParsing="false" onAction="#buscarProduto" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Filtrar" />
            </children>
        </HBox>

        <TableView fx:id="tableProdutos" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 5;">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT">
            <Button onAction="#fechar" text="Voltar para Estoques" prefHeight="35.0" prefWidth="150.0" style="-fx-cursor: hand;" />
        </HBox>

    </VBox>

</AnchorPane>