<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<HBox fx:id="rootBox" alignment="CENTER_LEFT" spacing="10.0"
      style="-fx-background-color: #e8e8e8; -fx-background-radius: 5; -fx-padding: 8;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.devs.trabalho.controller.gerenciador.contatos.ItemContatoController">

    <children>
        <Label fx:id="lblTexto" style="-fx-font-weight: bold; -fx-text-fill: #333;" text="Tipo: Valor" />

        <Region HBox.hgrow="ALWAYS" />

        <Button mnemonicParsing="false" onAction="#remover" text="Remover"
                style="-fx-background-color: transparent; -fx-border-color: #e57373; -fx-border-radius: 4; -fx-text-fill: #e57373; -fx-cursor: hand;" />
    </children>

</HBox>